---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';
import ContactCTA from '../components/ContactCTA.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';
import softwareDescription from '../content/work/Software/descriptions/software.en.txt?raw';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
).filter((project) => project.data.tags.includes('Software'));

const descriptionParagraphs = softwareDescription
	.split(/\r?\n\r?\n/)
	.map((paragraph) => paragraph.trim())
	.filter(Boolean);
---

<BaseLayout
	title="Software Projects | Mathias Dick"
	description="Explore my software engineering projects"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Software Projects"
				tagline="Practical software solutions with a focus on automation, reliability, and clean implementation."
				align="start"
			/>
			<section class="software-intro stack gap-4" aria-label="Software experience summary">
				{descriptionParagraphs.map((paragraph) => <p>{paragraph}</p>)}
			</section>
			<Grid>
				{
					projects.map((project) => (
						<li>
							<PortfolioPreview project={project} />
						</li>
					))
				}
			</Grid>
		</main>
		<ContactCTA />
	</div>
</BaseLayout>

<style>
	.software-intro {
		max-width: 72ch;
		color: var(--gray-300);
		font-size: var(--text-md);
	}
</style>
