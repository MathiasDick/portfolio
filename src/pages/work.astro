---
import { getCollection } from "astro:content";
import ContactCTA from "../components/ContactCTA.astro";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = (await getCollection("work")).sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
  title="My Work | Mathias Dick"
  description="Learn about Mathias Dick's most recent projects"
>
  <div class="stack gap-20">
    <main class="work-container stack gap-8">
      <Hero
        title="My Work"
        tagline="A selection of projects across software, electronics, and mechanical engineering."
        align="start"
      />
      <Grid>
        {
          projects.map((project) => (
            <li>
              <PortfolioPreview project={project} />
            </li>
          ))
        }
      </Grid>
    </main>
    <ContactCTA />
  </div>
</BaseLayout>

<style>
  .work-container {
    width: 100%;
    max-width: 140rem;
    margin-inline: auto;
    padding-inline: 2rem;
  }

  @media (min-width: 90em) {
    .work-container {
      padding-inline: 4rem;
    }
  }
</style>
